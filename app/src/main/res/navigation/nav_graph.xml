<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.ricardo.imc.pages.HomePage"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_home_page">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.ricardo.imc.pages.HeightPage"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_height_page">

        <action
            android:id="@+id/action_SecondFragment_to_WeightFragmentPage"
            app:destination="@id/WeightFragmentPage" />
    </fragment>
    <fragment
        android:id="@+id/WeightFragmentPage"
        android:name="com.ricardo.imc.pages.WeightPage"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_weight_page">
        <action
            android:id="@+id/action_WeightFragmentPage_to_ResultPage"
            app:destination="@id/ResultPage" />
    </fragment>
    <fragment
        android:id="@+id/ResultPage"
        android:name="com.ricardo.imc.pages.ResultPage"
        android:label="fragment_result_page"
        tools:layout="@layout/fragment_result_page" >
        <action
            android:id="@+id/action_ResultPage_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>